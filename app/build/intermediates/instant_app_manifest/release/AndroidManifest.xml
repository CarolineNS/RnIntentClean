<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jakting.shareclean"
    android:targetSandboxVersion="2"
    android:versionCode="20200913"
    android:versionName="1.0.1" >

    <uses-sdk
        android:minSdkVersion="26"
        android:targetSdkVersion="30" />

    <queries>
        <intent>
            <action android:name="android.intent.action.SEND" />

            <data android:mimeType="*/*" />
        </intent>
    </queries>

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:extractNativeLibs="false"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.jakting.shareclean.SettingsActivity"
            android:label="@string/setting_title"
            android:parentActivityName="com.jakting.shareclean.MainActivity" />
        <activity
            android:name="com.jakting.shareclean.MiscActivity"
            android:label="@string/misc_card_title"
            android:parentActivityName="com.jakting.shareclean.MainActivity" />
        <activity
            android:name="com.jakting.shareclean.AboutActivity"
            android:theme="@style/AppTheme.About" />
        <activity android:name="com.jakting.shareclean.MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.jakting.shareclean.AppsManagementActivity"
            android:label="@string/app_manage_card_title"
            android:parentActivityName="com.jakting.shareclean.MainActivity" />
    </application>

</manifest>